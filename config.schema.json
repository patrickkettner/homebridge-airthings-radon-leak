{
    "pluginAlias": "AirthingsHub",
    "pluginType": "platform",
    "headerDisplay": "Please create an API Client at https://dashboard.airthings.com/access-control-client to continue.",
    "footerDisplay": "For advanced troubleshooting, check the logs or consult the README.",
    "singular": true,
    "customUi": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "Airthings"
            },
            "clientId": {
                "title": "Client ID",
                "type": "string",
                "required": true,
                "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
                "description": "Create an API Client at https://dashboard.airthings.com/access-control-client (Must be a valid UUID)"
            },
            "clientSecret": {
                "title": "Client Secret",
                "type": "string",
                "required": true,
                "description": "The secret key for your API Client"
            },
            "radonThreshold": {
                "title": "Radon Threshold",
                "type": "integer",
                "default": 150,
                "minimum": 0,
                "description": "Threshold at which a Radon leak is detected."
            },
            "radonUnit": {
                "title": "Radon Unit (Presentation Only)",
                "type": "string",
                "default": "Bq/m3",
                "enum": [
                    "Bq/m3",
                    "pCi/L"
                ],
                "description": "Select the unit for Radon characteristics (1 pCi/L = 37 Bq/m3)."
            },
            "sensors": {
                "title": "Enabled Sensors",
                "type": "array",
                "default": [
                    "radon",
                    "battery"
                ],
                "items": {
                    "type": "string",
                    "enum": [
                        "radon",
                        "co2",
                        "voc",
                        "temp",
                        "humidity",
                        "battery"
                    ]
                }
            },
            "enableEveCustomCharacteristics": {
                "title": "Enable Eve App History",
                "type": "boolean",
                "default": false
            },
            "orphanGracePeriodDays": {
                "title": "Orphan Grace Period (Days)",
                "type": "integer",
                "default": 365,
                "description": "Number of days before an unreachable accessory is automatically removed. Set to 0 to explicitly disable automatic removal."
            },
            "ignoredDevices": {
                "title": "Ignored Devices",
                "type": "array",
                "items": {
                    "type": "string",
                    "title": "Device ID (UUID)"
                }
            },
            "includedDevices": {
                "title": "Included Devices",
                "type": "array",
                "items": {
                    "type": "string",
                    "title": "Device ID (UUID)"
                }
            },
            "debugMode": {
                "title": "Enable Verbose Logging",
                "type": "boolean",
                "default": false
            }
        }
    }
}