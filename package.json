{
    "name": "homebridge-airthings-hub",
    "version": "2.0.0",
    "description": "Homebridge plugin for Airthings devices via Consumer API (Hub/Cloud)",
    "license": "ISC",
    "keywords": [
        "homebridge-plugin",
        "airthings",
        "radon",
        "leak-sensor",
        "hub",
        "cloud"
    ],
    "displayName": "Homebridge Airthings Hub",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/patrickkettner/homebridge-airthings-hub.git"
    },
    "bugs": {
        "url": "https://github.com/patrickkettner/homebridge-airthings-hub/issues"
    },
    "homepage": "https://github.com/patrickkettner/homebridge-airthings-hub#readme",
    "engines": {
        "node": ">=18.15.0",
        "homebridge": ">=1.8.0"
    },
    "main": "dist/index.js",
    "files": [
        "dist",
        "homebridge-ui",
        "config.schema.json"
    ],
    "scripts": {
        "prepack": "npm run build",
        "smoke": "tsx test/smoke.ts",
        "test:backend": "c8 --all --reporter=text --reporter=lcov --exclude src/types.ts mocha --require tsx --exit 'test/*.spec.ts'",
        "test:ui": "playwright test",
        "test": "npm run test:backend && npm run test:ui",
        "lint": "eslint src/**.ts",
        "lint:fix": "eslint src/**.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "build": "rimraf dist && tsc",
        "prepublishOnly": "npm run test && npm run build"
    },
    "peerDependencies": {
        "homebridge": "^1.8.0"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.1",
        "@playwright/test": "^1.58.2",
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.7",
        "@types/sinon": "^17.0.3",
        "c8": "^10.1.3",
        "chai": "^4.4.1",
        "dotenv": "^17.3.1",
        "homebridge": "^1.8.0",
        "minimatch": "^10.2.2",
        "mocha": "^11.3.0",
        "playwright": "^1.58.2",
        "rimraf": "^6.1.3",
        "sinon": "^17.0.1",
        "tsx": "^4.21.0",
        "typescript": "^5.4.5"
    },
    "type": "module",
    "dependencies": {
        "@homebridge/plugin-ui-utils": "^2.2.0"
    }
}
